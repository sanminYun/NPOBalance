<Window x:Class="NPOBalance.Views.CompanySelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="회사 선택" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="회사를 선택하세요" 
                   FontSize="16" 
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>

        <DataGrid Grid.Row="1"
                  x:Name="CompaniesDataGrid"
                  ItemsSource="{Binding Companies}"
                  SelectedItem="{Binding SelectedCompany}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserResizeRows="False"
                  HeadersVisibility="Column"
                  GridLinesVisibility="All"
                  AlternatingRowBackground="#F5F5F5"
                  RowHeight="35"
                  Margin="0,0,0,20">
            <DataGrid.Columns>
                <DataGridTextColumn Header="회사코드" Binding="{Binding CompanyCode}" Width="100"/>
                <DataGridTextColumn Header="회사명" Binding="{Binding Name}" Width="*" MinWidth="150"/>
                <DataGridTextColumn Header="사업자등록번호" Binding="{Binding BusinessNumber}" Width="150"/>
                <DataGridTextColumn Header="구분" Binding="{Binding CompanyType}" Width="100"/>
                <DataGridTextColumn Header="원천" Binding="{Binding TaxSource}" Width="100"/>
                <DataGridTextColumn Header="대표자명" Binding="{Binding RepresentativeName}" Width="120"/>
                <DataGridTemplateColumn Header="회계연도" Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <Run Text="{Binding FiscalYearStart, StringFormat='{}{0:yyyy-MM-dd}'}"/>
                                <Run Text=" ~ "/>
                                <Run Text="{Binding FiscalYearEnd, StringFormat='{}{0:yyyy-MM-dd}'}"/>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="새 회사 추가"
                    Command="{Binding AddCompanyCommand}"
                    Width="120"
                    Height="35"
                    Margin="0,0,10,0"/>
            <Button Content="확인"
                    Command="{Binding ConfirmCommand}"
                    Width="100"
                    Height="35"/>
        </StackPanel>
    </Grid>
</Window>