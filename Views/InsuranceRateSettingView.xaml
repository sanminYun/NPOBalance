<UserControl x:Class="NPOBalance.Views.InsuranceRateSettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:NPOBalance.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewModels:InsuranceRateSettingViewModel}"
             d:DesignWidth="1000"
             d:DesignHeight="700">
    <UserControl.Resources>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
            <Setter Property="Foreground" Value="#333"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>

        <Style x:Key="RateTextBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
        </Style>

        <Style x:Key="AmountTextBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
        </Style>
    </UserControl.Resources>

    <DockPanel Margin="20">
        <!-- 제목 -->
        <TextBlock DockPanel.Dock="Top"
                   Text="4대보험 요율 설정"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- 저장 버튼 -->
        <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="저장"
                    Width="120"
                    Height="35"
                    Command="{Binding SaveCommand}"
                    FontSize="14"/>
        </StackPanel>

        <!-- 메인 컨텐츠 -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- 국민연금 -->
                <Border BorderBrush="#DDD" BorderThickness="1" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="국민연금" Style="{StaticResource SectionHeaderStyle}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- 요율 -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="근로자 부담률" Style="{StaticResource LabelStyle}"/>
                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                                <TextBox Text="{Binding NationalPensionEmployeeRate, StringFormat={}{0:0.000}}"
                                         Style="{StaticResource RateTextBoxStyle}"/>
                                <TextBlock Text="%" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="사업자 부담률" Style="{StaticResource LabelStyle}" Margin="0,10,10,0"/>
                            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,10,0,0">
                                <TextBox Text="{Binding NationalPensionEmployerRate, StringFormat={}{0:0.000}}"
                                         Style="{StaticResource RateTextBoxStyle}"/>
                                <TextBlock Text="%" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>

                            <!-- 최저한도 -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="최저한도 (기준금액)" Style="{StaticResource LabelStyle}" Margin="0,10,10,0"/>
                            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,10,0,0">
                                <TextBox Text="{Binding NationalPensionMinBaseAmount, StringFormat={}{0:N0}}" 
                                         Style="{StaticResource AmountTextBoxStyle}"/>
                                <TextBlock Text="원" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="최저한도 (보험료)" Style="{StaticResource LabelStyle}" Margin="0,10,10,0"/>
                            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0,10,0,0">
                                <TextBox Text="{Binding NationalPensionMinPremium, StringFormat={}{0:N0}}" 
                                         Style="{StaticResource AmountTextBoxStyle}"/>
                                <TextBlock Text="원" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- 건강보험 -->
                <Border BorderBrush="#DDD" BorderThickness="1" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="건강보험" Style="{StaticResource SectionHeaderStyle}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="근로자 부담률" Style="{StaticResource LabelStyle}"/>
                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                                <TextBox Text="{Binding HealthInsuranceEmployeeRate, StringFormat={}{0:0.000}}" 
                                         Style="{StaticResource RateTextBoxStyle}"/>
                                <TextBlock Text="%" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="사업자 부담률" Style="{StaticResource LabelStyle}" Margin="0,10,10,0"/>
                            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,10,0,0">
                                <TextBox Text="{Binding HealthInsuranceEmployerRate, StringFormat={}{0:0.000}}" 
                                         Style="{StaticResource RateTextBoxStyle}"/>
                                <TextBlock Text="%" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="최저한도 (기준금액)" Style="{StaticResource LabelStyle}" Margin="0,10,10,0"/>
                            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,10,0,0">
                                <TextBox Text="{Binding HealthInsuranceMinBaseAmount, StringFormat={}{0:N0}}" 
                                         Style="{StaticResource AmountTextBoxStyle}"/>
                                <TextBlock Text="원" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="최저한도 (보험료)" Style="{StaticResource LabelStyle}" Margin="0,10,10,0"/>
                            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0,10,0,0">
                                <TextBox Text="{Binding HealthInsuranceMinPremium, StringFormat={}{0:N0}}" 
                                         Style="{StaticResource AmountTextBoxStyle}"/>
                                <TextBlock Text="원" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- 장기요양보험 -->
                <Border BorderBrush="#DDD" BorderThickness="1" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="장기요양보험" Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="근로자 부담률" Style="{StaticResource LabelStyle}"/>
                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                                <TextBox Text="{Binding LongTermCareEmployeeRate, StringFormat={}{0:0.000}}" 
                                         Style="{StaticResource RateTextBoxStyle}"/>
                                <TextBlock Text="%" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="사업자 부담률" Style="{StaticResource LabelStyle}" Margin="0,10,10,0"/>
                            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,10,0,0">
                                <TextBox Text="{Binding LongTermCareEmployerRate, StringFormat={}{0:0.000}}" 
                                         Style="{StaticResource RateTextBoxStyle}"/>
                                <TextBlock Text="%" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="최저한도 (기준금액)" Style="{StaticResource LabelStyle}" Margin="0,10,10,0"/>
                            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,10,0,0">
                                <TextBox Text="{Binding LongTermCareMinBaseAmount, StringFormat={}{0:N0}}" 
                                         Style="{StaticResource AmountTextBoxStyle}"/>
                                <TextBlock Text="원" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="최저한도 (보험료)" Style="{StaticResource LabelStyle}" Margin="0,10,10,0"/>
                            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0,10,0,0">
                                <TextBox Text="{Binding LongTermCareMinPremium, StringFormat={}{0:N0}}" 
                                         Style="{StaticResource AmountTextBoxStyle}"/>
                                <TextBlock Text="원" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- 고용보험 -->
                <Border BorderBrush="#DDD" BorderThickness="1" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="고용보험" Style="{StaticResource SectionHeaderStyle}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="근로자 부담률" Style="{StaticResource LabelStyle}"/>
                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                                <TextBox Text="{Binding EmploymentInsuranceEmployeeRate, StringFormat={}{0:0.000}}" 
                                         Style="{StaticResource RateTextBoxStyle}"/>
                                <TextBlock Text="%" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="사업자 부담률" Style="{StaticResource LabelStyle}" Margin="0,10,10,0"/>
                            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,10,0,0">
                                <TextBox Text="{Binding EmploymentInsuranceEmployerRate, StringFormat={}{0:0.000}}" 
                                         Style="{StaticResource RateTextBoxStyle}"/>
                                <TextBlock Text="%" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="최저한도 (기준금액)" Style="{StaticResource LabelStyle}" Margin="0,10,10,0"/>
                            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,10,0,0">
                                <TextBox Text="{Binding EmploymentInsuranceMinBaseAmount, StringFormat={}{0:N0}}" 
                                         Style="{StaticResource AmountTextBoxStyle}"/>
                                <TextBlock Text="원" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="최저한도 (보험료)" Style="{StaticResource LabelStyle}" Margin="0,10,10,0"/>
                            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0,10,0,0">
                                <TextBox Text="{Binding EmploymentInsuranceMinPremium, StringFormat={}{0:N0}}" 
                                         Style="{StaticResource AmountTextBoxStyle}"/>
                                <TextBlock Text="원" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- 산재보험 -->
                <Border BorderBrush="#DDD" BorderThickness="1" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="산재보험" Style="{StaticResource SectionHeaderStyle}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="근로자 부담률" Style="{StaticResource LabelStyle}"/>
                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                                <TextBox Text="{Binding IndustrialAccidentEmployeeRate, StringFormat={}{0:0.000}}" 
                                         Style="{StaticResource RateTextBoxStyle}"/>
                                <TextBlock Text="%" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="사업자 부담률" Style="{StaticResource LabelStyle}" Margin="0,10,10,0"/>
                            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,10,0,0">
                                <TextBox Text="{Binding IndustrialAccidentEmployerRate, StringFormat={}{0:0.000}}" 
                                         Style="{StaticResource RateTextBoxStyle}"/>
                                <TextBlock Text="%" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="최저한도 (기준금액)" Style="{StaticResource LabelStyle}" Margin="0,10,10,0"/>
                            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,10,0,0">
                                <TextBox Text="{Binding IndustrialAccidentMinBaseAmount, StringFormat={}{0:N0}}" 
                                         Style="{StaticResource AmountTextBoxStyle}"/>
                                <TextBlock Text="원" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="최저한도 (보험료)" Style="{StaticResource LabelStyle}" Margin="0,10,10,0"/>
                            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0,10,0,0">
                                <TextBox Text="{Binding IndustrialAccidentMinPremium, StringFormat={}{0:N0}}" 
                                         Style="{StaticResource AmountTextBoxStyle}"/>
                                <TextBlock Text="원" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>