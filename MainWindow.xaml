<Window x:Class="NPOBalance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:NPOBalance.Views"
        Title="NPO 급여관리"
        WindowState="Maximized">
    <Window.Resources>
        <Style x:Key="MenuItemStyle" TargetType="MenuItem">
            <Style.Triggers>
                <Trigger Property="Tag" Value="Selected">
                    <Setter Property="FontWeight" Value="Bold"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="회사">
                <MenuItem Header="회사 다시 선택" Click="ReSelectCompany_Click"/>
            </MenuItem>
            <MenuItem x:Name="EmployeeManagementMenuItem"
                      Header="사원 정보"
                      Style="{StaticResource MenuItemStyle}"
                      Click="EmployeeManagement_Click"/>
            <MenuItem x:Name="PayrollEntryMenuItem"
                      Header="급여입력"
                      Style="{StaticResource MenuItemStyle}"
                      Click="PayrollEntry_Click"/>
            <MenuItem Header="설정">
                <MenuItem Header="계정과목 설정" Click="PayItemSetting_Click"/>
                <MenuItem Header="요율 설정" Click="InsuranceRateSetting_Click"/>
                <MenuItem Header="인쇄 설정" IsEnabled="False"/>
            </MenuItem>
        </Menu>
        <Border Margin="10" Background="#FAFAFA" BorderBrush="#DDD" BorderThickness="1" CornerRadius="4">
            <ContentControl x:Name="ContentHost"/>
        </Border>
    </DockPanel>
</Window>
