<UserControl x:Class="NPOBalance.Views.PayrollEntryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:NPOBalance.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="1200"
             d:DesignHeight="800"
             Focusable="True">
    <UserControl.DataContext>
        <viewModels:PayrollEntryViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <Style x:Key="FormLabelStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,4"/>
        </Style>
        <Style x:Key="FormInputBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="220"/>
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
        </Style>
        <Style x:Key="ReadonlyBox" TargetType="TextBox" BasedOn="{StaticResource FormInputBoxStyle}">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Background" Value="#F1F3F7"/>
            <Setter Property="BorderBrush" Value="#CBD2E0"/>
        </Style>
        <Style x:Key="PayrollGridRowStyle" TargetType="DataGridRow">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding HasEmployee}" Value="False">
                    <Setter Property="IsEnabled" Value="False"/>
                    <Setter Property="Focusable" Value="False"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="PayrollGridCellStyle" TargetType="DataGridCell">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="PayrollGridTextStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>

        <!-- Left panel -->
        <DockPanel Grid.Column="0" Margin="0,0,5,0">
            <TextBlock DockPanel.Dock="Top"
                       Text="F2 키를 눌러 위쪽부터 순차로 사원을 배치하세요."
                       Margin="0,0,0,10"
                       Foreground="#4B5563"/>

            <StackPanel DockPanel.Dock="Bottom"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,10,0,0">
                <Button Content="사원 선택 (F2)"
                        Width="140"
                        Margin="0,0,10,0"
                        Click="SelectEmployeeButton_Click"/>
                <Button Content="빈 행 추가"
                        Width="110"
                        Margin="0,0,10,0"
                        Command="{Binding AddRowsCommand}"/>
                <Button Content="사원 해제"
                        Width="110"
                        Command="{Binding ClearEmployeeCommand}"/>
            </StackPanel>

            <Border BorderBrush="#E5E7EB" BorderThickness="1">
                <DataGrid x:Name="PayrollRowGrid"
                          ItemsSource="{Binding PayrollRows}"
                          SelectedItem="{Binding SelectedRow, Mode=TwoWay}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          RowHeight="34"
                          HeadersVisibility="Column"
                          GridLinesVisibility="All"
                          HorizontalGridLinesBrush="#E5E7EB"
                          VerticalGridLinesBrush="#E5E7EB"
                          Background="White"
                          RowStyle="{StaticResource PayrollGridRowStyle}"
                          CellStyle="{StaticResource PayrollGridCellStyle}"
                          PreviewKeyDown="PayrollRowGrid_PreviewKeyDown">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="사번"
                                            Binding="{Binding EmployeeCode}"
                                            Width="80"
                                            ElementStyle="{StaticResource PayrollGridTextStyle}"/>
                        <DataGridTextColumn Header="사원명"
                                            Binding="{Binding EmployeeName}"
                                            Width="*"
                                            ElementStyle="{StaticResource PayrollGridTextStyle}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </DockPanel>

        <GridSplitter Grid.Column="0"
                      Width="5"
                      HorizontalAlignment="Right"
                      Background="#D1D5DB"/>

        <!-- Right panel - 내용 동일 -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Margin="0,0,0,8"
                    Padding="12"
                    Background="#F7F9FC"
                    BorderBrush="#D7DFEF"
                    BorderThickness="1">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasSelectedRow}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <StackPanel Orientation="Vertical" DataContext="{Binding SelectedRow}">
                    <TextBlock Text="{Binding EmployeeName, TargetNullValue='사원 미지정'}"
                               FontSize="20"
                               FontWeight="Bold"/>
                    <TextBlock Margin="0,4,0,0">
                        <Run Text="사번: "/>
                        <Run Text="{Binding EmployeeCode, Mode=OneWay, TargetNullValue='-'}"/>
                        <Run Text="    부서: "/>
                        <Run Text="{Binding Department, Mode=OneWay, TargetNullValue='-'}"/>
                    </TextBlock>
                    <TextBlock>
                        <Run Text="예상 총 급여: "/>
                        <Run Text="{Binding Detail.EstimatedAnnualSalary, Mode=OneWay, StringFormat={}{0:N0} 원}"/>
                    </TextBlock>
                </StackPanel>
            </Border>

            <Border Grid.Row="1"
                    Margin="0"
                    BorderThickness="1"
                    BorderBrush="#E5E7EB"
                    Background="#FBFBFB">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasSelectedRow}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <TextBlock Text="F2 키를 눌러 사원 입력"
                           FontSize="18"
                           Foreground="#6B7280"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <ScrollViewer Grid.Row="1"
                          Margin="0"
                          VerticalScrollBarVisibility="Auto">
                <ScrollViewer.Style>
                    <Style TargetType="ScrollViewer">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasSelectedRow}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ScrollViewer.Style>

                <StackPanel Margin="10"
                            DataContext="{Binding SelectedRow.Detail}">
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,12">
                        <GroupBox Header="[과세급상여]"
                                  Margin="0,0,12,0"
                                  Width="460">
                            <Grid Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="250"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="기본급" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Style="{StaticResource FormInputBoxStyle}" Text="{Binding BaseSalary, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N0}}"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="명절수당" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Style="{StaticResource FormInputBoxStyle}" Text="{Binding HolidayAllowance, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N0}}"/>
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="소계 (A)" Style="{StaticResource FormLabelStyle}" Margin="0,12,0,0"/>
                                <TextBox Grid.Row="3" Grid.Column="1" Style="{StaticResource ReadonlyBox}" Margin="0,12,0,0" Text="{Binding TaxableEarningsSubtotal, Mode=OneWay, StringFormat={}{0:N0}}"/>
                            </Grid>
                        </GroupBox>

                        <GroupBox Header="[비과세급상여]"
                                  Width="460">
                            <Grid Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="250"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="식대" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Style="{StaticResource FormInputBoxStyle}" Text="{Binding MealAllowance, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N0}}"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="출산휴가지원" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Style="{StaticResource FormInputBoxStyle}" Text="{Binding MaternitySupport, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N0}}"/>
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="소계 (B)" Style="{StaticResource FormLabelStyle}" Margin="0,12,0,0"/>
                                <TextBox Grid.Row="3" Grid.Column="1" Style="{StaticResource ReadonlyBox}" Margin="0,12,0,0" Text="{Binding NonTaxableEarningsSubtotal, Mode=OneWay, StringFormat={}{0:N0}}"/>
                            </Grid>
                        </GroupBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,12">
                        <GroupBox Header="[4대보험 공제항목]"
                                  Margin="0,0,12,0"
                                  Width="460">
                            <Grid Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="250"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="국민연금" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Style="{StaticResource ReadonlyBox}" Text="{Binding EmployeeNationalPension, Mode=OneWay, StringFormat={}{0:N0}}"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="건강보험" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Style="{StaticResource ReadonlyBox}" Text="{Binding EmployeeHealthInsurance, Mode=OneWay, StringFormat={}{0:N0}}"/>
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="장기요양보험" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Style="{StaticResource ReadonlyBox}" Text="{Binding EmployeeLongTermCare, Mode=OneWay, StringFormat={}{0:N0}}"/>
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="고용보험" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox Grid.Row="3" Grid.Column="1" Style="{StaticResource ReadonlyBox}" Text="{Binding EmployeeEmploymentInsurance, Mode=OneWay, StringFormat={}{0:N0}}"/>
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="국민연금정산" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox Grid.Row="4" Grid.Column="1" Style="{StaticResource FormInputBoxStyle}" Text="{Binding NationalPensionSettlement, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N0}}"/>
                                <TextBlock Grid.Row="5" Grid.Column="0" Text="건강보험정산" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox Grid.Row="5" Grid.Column="1" Style="{StaticResource FormInputBoxStyle}" Text="{Binding HealthInsuranceSettlement, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N0}}"/>
                                <TextBlock Grid.Row="6" Grid.Column="0" Text="장기요양정산" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox Grid.Row="6" Grid.Column="1" Style="{StaticResource FormInputBoxStyle}" Text="{Binding LongTermCareSettlement, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N0}}"/>
                                <TextBlock Grid.Row="7" Grid.Column="0" Text="고용보험정산" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox Grid.Row="7" Grid.Column="1" Style="{StaticResource FormInputBoxStyle}" Text="{Binding EmploymentInsuranceSettlement, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N0}}"/>
                                <TextBlock Grid.Row="9" Grid.Column="0" Text="소계 (C)" Style="{StaticResource FormLabelStyle}" Margin="0,12,0,0"/>
                                <TextBox Grid.Row="9" Grid.Column="1" Style="{StaticResource ReadonlyBox}" Margin="0,12,0,0" Text="{Binding InsuranceDeductionSubtotal, Mode=OneWay, StringFormat={}{0:N0}}"/>
                            </Grid>
                        </GroupBox>

                        <GroupBox Header="[소득세 공제항목]"
                                  Width="460">
                            <Grid Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="250"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="소득세" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Style="{StaticResource ReadonlyBox}" Text="{Binding IncomeTax, Mode=OneWay, StringFormat={}{0:N0}}"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="지방소득세" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Style="{StaticResource ReadonlyBox}" Text="{Binding LocalIncomeTax, Mode=OneWay, StringFormat={}{0:N0}}"/>
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="중도퇴사 정산 소득세" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Style="{StaticResource FormInputBoxStyle}" Text="{Binding MidtermIncomeTaxAdjustment, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N0}}"/>
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="중도퇴사 정산 지방소득세" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox Grid.Row="3" Grid.Column="1" Style="{StaticResource FormInputBoxStyle}" Text="{Binding MidtermLocalTaxAdjustment, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N0}}"/>
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="연말정산 소득세" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox Grid.Row="4" Grid.Column="1" Style="{StaticResource FormInputBoxStyle}" Text="{Binding YearEndIncomeTaxAdjustment, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N0}}"/>
                                <TextBlock Grid.Row="5" Grid.Column="0" Text="연말정산 지방소득세" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox Grid.Row="5" Grid.Column="1" Style="{StaticResource FormInputBoxStyle}" Text="{Binding YearEndLocalTaxAdjustment, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N0}}"/>
                                <TextBlock Grid.Row="7" Grid.Column="0" Text="소계 (D)" Style="{StaticResource FormLabelStyle}" Margin="0,12,0,0"/>
                                <TextBox Grid.Row="7" Grid.Column="1" Style="{StaticResource ReadonlyBox}" Margin="0,12,0,0" Text="{Binding IncomeTaxSubtotal, Mode=OneWay, StringFormat={}{0:N0}}"/>
                                <TextBlock Grid.Row="8" Grid.Column="0" Text="차인지급액 (E)" Style="{StaticResource FormLabelStyle}" Margin="0,6,0,0"/>
                                <TextBox Grid.Row="8" Grid.Column="1" Style="{StaticResource ReadonlyBox}" Margin="0,6,0,0" Text="{Binding NetPay, Mode=OneWay, StringFormat={}{0:N0}}"/>
                            </Grid>
                        </GroupBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <GroupBox Header="[4대보험 기업부담금]"
                                  Margin="0,0,12,0"
                                  Width="460">
                            <Grid Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="250"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="국민연금" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Style="{StaticResource ReadonlyBox}" Text="{Binding EmployerNationalPension, Mode=OneWay, StringFormat={}{0:N0}}"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="건강보험" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Style="{StaticResource ReadonlyBox}" Text="{Binding EmployerHealthInsurance, Mode=OneWay, StringFormat={}{0:N0}}"/>
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="장기요양보험" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Style="{StaticResource ReadonlyBox}" Text="{Binding EmployerLongTermCare, Mode=OneWay, StringFormat={}{0:N0}}"/>
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="고용보험" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox Grid.Row="3" Grid.Column="1" Style="{StaticResource ReadonlyBox}" Text="{Binding EmployerEmploymentInsurance, Mode=OneWay, StringFormat={}{0:N0}}"/>
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="국민연금정산" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox Grid.Row="4" Grid.Column="1" Style="{StaticResource FormInputBoxStyle}" Text="{Binding EmployerNationalPensionSettlement, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N0}}"/>
                                <TextBlock Grid.Row="5" Grid.Column="0" Text="건강보험정산" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox Grid.Row="5" Grid.Column="1" Style="{StaticResource FormInputBoxStyle}" Text="{Binding EmployerHealthInsuranceSettlement, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N0}}"/>
                                <TextBlock Grid.Row="6" Grid.Column="0" Text="장기요양정산" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox Grid.Row="6" Grid.Column="1" Style="{StaticResource FormInputBoxStyle}" Text="{Binding EmployerLongTermCareSettlement, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N0}}"/>
                                <TextBlock Grid.Row="7" Grid.Column="0" Text="고용보험정산" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox Grid.Row="7" Grid.Column="1" Style="{StaticResource FormInputBoxStyle}" Text="{Binding EmployerEmploymentInsuranceSettlement, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N0}}"/>
                                <TextBlock Grid.Row="8" Grid.Column="0" Text="산재보험" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox Grid.Row="8" Grid.Column="1" Style="{StaticResource ReadonlyBox}" Text="{Binding IndustrialAccidentInsurance, Mode=OneWay, StringFormat={}{0:N0}}"/>
                                <TextBlock Grid.Row="10" Grid.Column="0" Text="소계 (F)" Style="{StaticResource FormLabelStyle}" Margin="0,12,0,0"/>
                                <TextBox Grid.Row="10" Grid.Column="1" Style="{StaticResource ReadonlyBox}" Margin="0,12,0,0" Text="{Binding EmployerInsuranceSubtotal, Mode=OneWay, StringFormat={}{0:N0}}"/>
                            </Grid>
                        </GroupBox>

                        <GroupBox Header="[퇴직적립금]"
                                  Width="460">
                            <Grid Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="250"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="퇴직적립금 - DC형" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Style="{StaticResource FormInputBoxStyle}" Text="{Binding RetirementDc, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N0}}"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="퇴직적립금 - DB형" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Style="{StaticResource FormInputBoxStyle}" Text="{Binding RetirementDb, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N0}}"/>
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="소계 (G)" Style="{StaticResource FormLabelStyle}" Margin="0,12,0,0"/>
                                <TextBox Grid.Row="3" Grid.Column="1" Style="{StaticResource ReadonlyBox}" Margin="0,12,0,0" Text="{Binding RetirementSubtotal, Mode=OneWay, StringFormat={}{0:N0}}"/>
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="기업부담액 (E+F+G)" Style="{StaticResource FormLabelStyle}" Margin="0,6,0,0"/>
                                <TextBox Grid.Row="4" Grid.Column="1" Style="{StaticResource ReadonlyBox}" Margin="0,6,0,0" Text="{Binding EmployerTotalBurden, Mode=OneWay, StringFormat={}{0:N0}}"/>
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,12,0,0">
                <Button Content="저장"
                        Width="120"
                        Command="{Binding SavePayrollCommand}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>