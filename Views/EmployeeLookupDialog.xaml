<Window x:Class="NPOBalance.Views.EmployeeLookupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="사원 선택"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <Style x:Key="CenteredCellStyle" TargetType="DataGridCell">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Grid Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="RegisteredEmployeeStyle" TargetType="DataGridRow">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsRegistered}" Value="True">
                    <Setter Property="Background" Value="#FFF9E6"/>
                    <Setter Property="Foreground" Value="#856404"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="급여자료를 입력할 사원을 선택하세요 (F2)"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="SearchBox"
                     Width="250"
                     Margin="0,0,10,0"
                     VerticalContentAlignment="Center"
                     Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}"
                     KeyDown="SearchBox_KeyDown"/>
            <Button Content="검색"
                    Width="80"
                    Margin="0,0,5,0"
                    Command="{Binding SearchCommand}"/>
            <Button Content="초기화"
                    Width="80"
                    Command="{Binding ClearSearchCommand}"/>
        </StackPanel>

        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding Employees}"
                  SelectedItem="{Binding SelectedEmployee}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  RowHeight="36"
                  SelectionMode="Single"
                  RowStyle="{StaticResource RegisteredEmployeeStyle}"
                  CellStyle="{StaticResource CenteredCellStyle}"
                  Margin="0,0,0,10">
            <DataGrid.InputBindings>
                <MouseBinding MouseAction="LeftDoubleClick"
                              Command="{Binding ConfirmCommand}"/>
            </DataGrid.InputBindings>
            <DataGrid.Columns>
                <DataGridTextColumn Header="사번" Binding="{Binding EmployeeCode}" Width="100"/>
                <DataGridTextColumn Header="성명" Binding="{Binding Name}" Width="140"/>
                <DataGridTextColumn Header="부서" Binding="{Binding Department}" Width="120"/>
                <DataGridTextColumn Header="직위" Binding="{Binding Position}" Width="120"/>
                <DataGridTextColumn Header="연락처" Binding="{Binding Address1}" Width="*"/>
                <DataGridTextColumn Header="예상총급여" Binding="{Binding EstimatedTotalSalary, StringFormat=N0}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock Text="노란색 배경: 이미 등록된 사원"
                       VerticalAlignment="Center"
                       Margin="0,0,20,0"
                       Foreground="#856404"
                       FontSize="12"/>
            <Button Content="확인"
                    Width="100"
                    Margin="0,0,10,0"
                    Command="{Binding ConfirmCommand}"/>
            <Button Content="닫기"
                    Width="100"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
