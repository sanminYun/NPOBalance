<Window x:Class="NPOBalance.Views.EmployeeLookupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="사원 선택"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="급여자료를 입력할 사원을 선택하세요 (F2)"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="SearchBox"
                     Width="250"
                     Margin="0,0,10,0"
                     VerticalContentAlignment="Center"
                     Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}"
                     KeyDown="SearchBox_KeyDown"/>
            <Button Content="검색"
                    Width="80"
                    Margin="0,0,5,0"
                    Command="{Binding SearchCommand}"/>
            <Button Content="초기화"
                    Width="80"
                    Command="{Binding ClearSearchCommand}"/>
        </StackPanel>

        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding Employees}"
                  SelectedItem="{Binding SelectedEmployee}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  RowHeight="32"
                  SelectionMode="Single"
                  Margin="0,0,0,10">
            <DataGrid.InputBindings>
                <MouseBinding MouseAction="LeftDoubleClick"
                              Command="{Binding ConfirmCommand}"/>
            </DataGrid.InputBindings>
            <DataGrid.Columns>
                <DataGridTextColumn Header="사번" Binding="{Binding EmployeeCode}" Width="100"/>
                <DataGridTextColumn Header="성명" Binding="{Binding Name}" Width="140"/>
                <DataGridTextColumn Header="부서" Binding="{Binding Department}" Width="120"/>
                <DataGridTextColumn Header="직위" Binding="{Binding Position}" Width="120"/>
                <DataGridTextColumn Header="연락처" Binding="{Binding Address1}" Width="*"/>
                <DataGridTextColumn Header="예상총급여" Binding="{Binding EstimatedTotalSalary, StringFormat=N0}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="확인"
                    Width="100"
                    Margin="0,0,10,0"
                    Command="{Binding ConfirmCommand}"/>
            <Button Content="닫기"
                    Width="100"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
